
<h1>Listing your Transactions</h1>

<table>
  <tr VALIGN="top" ALIGN="left">
    <th>Item</th>
    <th>Date Sold</th>
    <th>Transaction status</th>
  </tr>

<% for transaction in @transactions %>
  <tr class="<%= cycle("even", "odd") -%>" VALIGN="top">
    <td><%=h Item.find_by_id(transaction.item_id).itemTitle %></td>
    <td><%=h transaction.date.strftime("%d %b %Y") %></td>
    <td><%=h transaction.transaction_status %></td>
  </tr>
<% end %>
</table>

