<% form_for(@member) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :fname, 'First Name' %><br />
    <%= f.text_field :fname %>
  </p>
  <p>
    <%= f.label :lname, 'Last Name' %><br />
    <%= f.text_field :lname %>
  </p>
  <p>
    <%= f.label :email, 'E-mail' %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :phone, 'Phone' %><br />
